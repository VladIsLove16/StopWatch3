<Window x:Class="StopwatchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:converters="clr-namespace:StopwatchApp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"

        Title="Stopwatch App" Height="612.496" Width="320">
    <TabControl SelectionChanged="TabControl_SelectionChanged">
        <TabItem x:Name="Tab1" Header="Вкладка 1">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>


                <ListBox x:Name="stopwatchList" Grid.Row="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Width="100"/>
                                <TextBlock Text="{Binding ElapsedTime, StringFormat='{}{0:hh\\:mm\\:ss}'}" Width="100"/>
                                <Button Content="Start" Click="StartButton_Click"/>
                                <Button Content="Stop" Click="StopButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBox x:Name="nameTextBox" Width="100" Margin="5"/>
                    <Button Content="Add Stopwatch" Click="AddButton_Click"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem x:Name="Tab2" Header="Вкладка 2">
            <Grid Margin="8,0">
                <Grid.Resources>
                    <sys:DateTime x:Key="selectedDate" />

                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <lvc:PieChart x:Name="MyPieChart" Grid.Row="1" LegendLocation="Bottom" RenderTransformOrigin="0.464,0.596" Loaded="PieChart_Loaded">
                    
                </lvc:PieChart>
                <DockPanel Grid.Row="2" Margin="10,0">
                    <TextBlock   Background="Beige" Text="{Binding SelectedDateText}"  DockPanel.Dock="Left"  x:Name="DateTextBlock"/>
                    <TextBlock  Background="Aqua" Text="Time" HorizontalAlignment="Right"  DockPanel.Dock="Right"  x:Name="DayStat" />
                </DockPanel>
                <TextBlock Text="Statistics" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <Calendar Grid.Row="0" x:Name="calendar" FirstDayOfWeek="Monday"
                    SelectedDatesChanged="calendar_SelectedDatesChanged">
                    <Calendar.BlackoutDates>
                        <CalendarDateRange Start="10/5/2013" End="10/8/2013"></CalendarDateRange>
                    </Calendar.BlackoutDates>
                </Calendar>
                
            </Grid>
        </TabItem>
        <TabItem x:Name="Tab3" Header="Вкладка 3">Вторая вкладка</TabItem>

    </TabControl>

</Window>
