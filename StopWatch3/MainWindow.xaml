<Window x:Class="StopwatchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:converters="clr-namespace:StopwatchApp"
        Title="Stopwatch App" Height="450" Width="300">
   
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="stopwatchList" ItemsSource="{Binding stopwatches}" Grid.Row="0">
            <ListBox.ItemTemplate>  
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="100"/>
                        <TextBlock Text="{Binding ElapsedTime, StringFormat='{}{0:hh\\:mm\\:ss\\.f}'}" Width="100"/>
                        <Button Content="Start" Click="StartButton_Click"/>
                        <Button Content="Stop" Click="StopButton_Click"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="nameTextBox" Width="100" Margin="5"/>
            <Button Content="Add Stopwatch" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
